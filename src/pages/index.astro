---
import Banner from "../components/Banner.astro";
import Card from "../components/Card.astro";
import Contact from "../components/ContactForm.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="MVLandscape">
  <main>
    <section class="hero-section w-full mx-auto py-[200px] bg-white">
      <div class="background-overlay"></div>

      <div
        class="container flex h-full px-8 items-start flex-wrap mx-auto relative"
      >
        <div class="w-full flex items-start relative float-left">
          <h1>WELCOME TO MVLANDSCAPE</h1>
        </div>

        <div class="w-[65%] lg:w-[50%] flex items-start relative float-left">
          <div
            class="hero_button_container flex pt-14 items-center content-start flex-wrap relative w-full self-stretch"
          >
            <div class="w-full lg:w-[80%] flex relative mb-20">
              <p>
                Welcome to MVLandscape, we turn your landscaping dreams into
                stunning realities. Our skilled team designs and creates
                beautiful, functional outdoor spaces tailored to your vision.
                From lush gardens to inviting patios, we bring creativity and
                craftsmanship to every project.
              </p>
            </div>

            <div class="flex gap-3">
              <a
                href="/services/residential-services"
                class="bg-slate-300 rounded-lg py-3 px-5 hover:bg-slate-400 lg:hover:scale-105 transition-all"
                >Our Services</a
              >

              <a
                href="/contact"
                class="bg-slate-300 rounded-lg py-3 px-5 hover:bg-slate-400 lg:hover:scale-105 transition-all"
                >Contact Us</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>

    <Banner />

    <section class="py-9 bg-primary">
      <div class="background-overlay"></div>

      <div
        class="container mx-auto px-8 flex flex-wrap items-center content-center justify-center"
      >
        <div class="flex gap-3 items-center content-center justify-center">
          <div class="relative w-[40%]">
            <div
              class="absolute inline-block w-1 h-[80px] bg-white top-[-6.5rem]"
            >
            </div>
            <div class="flex relative">
              <div
                class="absolute inline-block w-10 h-10 rounded-full top-[-0.5rem] left-[-1rem] opacity-55 z-10 bg-slate-300"
              >
              </div>
              <span class="font-bold text-white">1.</span>

              <div class="ml-5 text-white">
                <h2>WHO WE ARE?</h2>
                <div>
                  <h2 class="text-lg font-bold pb-3">LOREM IPSUM</h2>
                  <p class="w-[75%]">
                    Lorem, ipsum dolor sit amet consectetur adipisicing elit.
