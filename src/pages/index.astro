        >
          <Image
            src={planting_flowers}
            alt="portfolio"
            width={200}
            height={200}
          />
          <Image src={portfolio2} alt="portfolio" width={300} height={200} />
          <Image src={portfolio3} alt="portfolio" width={150} height={150} />

